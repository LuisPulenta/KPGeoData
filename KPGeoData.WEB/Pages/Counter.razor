@page "/counter"

<PageTitle>Contador</PageTitle>

<h1>Contador</h1>

<p role="status">Cantidad de Clicks: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Apretar acá</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
